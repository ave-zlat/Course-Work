<Page x:Class="Alchemist.Split"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Alchemist"
      mc:Ignorable="d" 
      d:DesignHeight="600" 
      d:DesignWidth="875"
      Title="Split">

    <Grid Background="#FDDCFA">



        <Button Content="1. Выбрать папку" Click="SelectFolderButton_Click" IsEnabled="{Binding IsFolderSelected}" Margin="344,42,342,538" />
        <Button Content="2. Выбрать файл" Click="SelectFileButton_Click" IsEnabled="{Binding IsFolderSelected}" Margin="344,105,342,475" />
        <Button Content="3. Разделить" Click="SplitButton_Click" IsEnabled="{Binding IsSplitEnabled}" Margin="344,170,342,410" />
        <TextBlock Text="Информация:" FontWeight="Bold" Margin="82,214,80,300" Grid.Column="1" />
        <TextBlock x:Name="statusTextBlock" Margin="167,214,0,313" />


    </Grid>
</Page>
